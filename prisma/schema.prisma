// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js models
model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String    @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  workspacePreferences Json?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  workflows     Workflow[]
  subscriptions Subscription[]
  workspaceMembers WorkspaceMember[]

  @@map("users")
}

model Workspace {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  ownerId       String   // Integration layer compatibility
  settings      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  billingPlanId String?
  billingPlan   BillingPlan? @relation(fields: [billingPlanId], references: [id])

  // Stripe integration
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique

  // Integration layer relationships
  workspaceMembers WorkspaceMember[]
  invites          WorkspaceInvite[]
  credentials   Credential[]
  connectors    Connector[]
  webhooks      Webhook[]
  auditLogs     AuditLog[]
  usageRecords  UsageRecord[]
  alertRules    AlertRule[]
  alertChannels AlertChannel[]
  executionMetrics ExecutionMetrics[]
  
  apiKeys       ApiKey[]
  
  // Optional: Workflows can belong to a workspace
  // workflows     Workflow[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  role        String   @default("viewer") // owner, admin, editor, viewer
  userId      String
  workspaceId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@map("workspace_members")
}

model WorkspaceInvite {
  id          String   @id @default(cuid())
  email       String
  workspaceId String
  role        String   @default("viewer") // admin, editor, viewer
  token       String   @unique
  status      String   @default("pending") // pending, accepted, expired
  invitedById String
  createdAt   DateTime @default(now())
  expiresAt   DateTime

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([email])
  @@map("workspace_invites")
}

model ApiKey {
  id          String    @id @default(cuid())
  key         String    @unique
  name        String?
  workspaceId String
  role        String    @default("viewer") // admin, editor, viewer
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  usageCount  Int       @default(0)

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  usageRecords ApiKeyUsage[]

  @@index([workspaceId])
  @@map("api_keys")
}

model ApiKeyUsage {
  id         String   @id @default(cuid())
  apiKeyId   String
  endpoint   String
  method     String
  statusCode Int
  duration   Int
  timestamp  DateTime @default(now())

  apiKey ApiKey @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([apiKeyId])
  @@index([timestamp])
  @@map("api_key_usage")
}

model BillingPlan {
  id          String   @id @default(cuid())
  name        String   // Free, Pro, Enterprise
  price       Int      // Monthly price in cents
  currency    String   @default("USD")
  stripePriceId String? @unique
  
  // Limits
  maxExecutionsPerMonth Int      @default(1000)
  maxConnectors         Int      @default(5)
  maxRunMinutesPerMonth Int      @default(100) // Total run minutes
  maxWorkflows          Int      @default(10)
  maxTeamMembers        Int      @default(1)
  
  features    Json?    // Additional feature flags
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspaces Workspace[]

  @@map("billing_plans")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Application models
model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  isPublic    Boolean  @default(false)
  // Rate limiting and retry configuration
  rateLimitMaxConcurrent Int?     @default(5)
  rateLimitPerMinute     Int?     @default(100)
  retryMaxAttempts       Int      @default(3)
  retryBackoffMs         Int      @default(1000)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions          WorkflowVersion[]
  triggers          Trigger[]
  connectorInstances ConnectorInstance[]

  @@index([userId])
  @@map("workflows")
}

model WorkflowVersion {
  id          String   @id @default(cuid())
  workflowId  String
  version     Int
  definition  Json     // Full workflow definition including steps
  isActive    Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())

  workflow   Workflow    @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  executions Execution[]
  steps      Step[]

  @@unique([workflowId, version])
  @@index([workflowId])
  @@index([isActive])
  @@map("workflow_versions")
}

model Step {
  id                String   @id @default(cuid())
  workflowVersionId String
  name              String
  type              String   // http_request, transform, conditional, loop, delay, error_handler, fallback, custom_code
  config            Json     // Step-specific configuration
  position          Int      // Order in workflow
  createdAt         DateTime @default(now())

  workflowVersion WorkflowVersion  @relation(fields: [workflowVersionId], references: [id], onDelete: Cascade)
  executionSteps  ExecutionStep[]

  @@index([workflowVersionId])
  @@map("steps")
}

model Trigger {
  id         String   @id @default(cuid())
  workflowId String
  type       String   // manual, webhook, schedule, event, api
  config     Json     // Trigger-specific configuration (cron expression, webhook URL, etc.)
  enabled    Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  workflow   Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  executions Execution[]

  @@index([workflowId])
  @@index([type])
  @@map("triggers")
}

model ConnectorInstance {
  id           String   @id @default(cuid())
  workflowId   String
  name         String   // e.g., "Production API", "Staging Database"
  connectorType String  // http, database, email, etc.
  config       Json     // Connection details, credentials (encrypted)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@map("connector_instances")
}

model Execution {
  id                String    @id @default(cuid())
  workflowVersionId String
  triggerId         String?   // Which trigger initiated this execution
  status            String    @default("pending") // pending, running, completed, failed, cancelled
  input             Json?
  output            Json?
  error             String?   @db.Text
  startedAt         DateTime  @default(now())
  completedAt       DateTime?
  durationMs        Int?      // Execution duration in milliseconds
  retryCount        Int       @default(0)

  workflowVersion WorkflowVersion  @relation(fields: [workflowVersionId], references: [id], onDelete: Cascade)
  trigger         Trigger?         @relation(fields: [triggerId], references: [id], onDelete: SetNull)
  logs            ExecutionLog[]
  steps           ExecutionStep[]

  @@index([workflowVersionId])
  @@index([triggerId])
  @@index([status])
  @@index([startedAt])
  @@map("executions")
}

model ExecutionStep {
  id          String    @id @default(cuid())
  executionId String
  stepId      String
  status      String    @default("pending") // pending, running, completed, failed, skipped
  input       Json?
  output      Json?
  error       String?   @db.Text
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  durationMs  Int?
  retryCount  Int       @default(0)

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  step      Step      @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@index([executionId])
  @@index([stepId])
  @@map("execution_steps")
}

model ExecutionLog {
  id          String   @id @default(cuid())
  executionId String
  level       String   // info, warn, error, debug
  message     String   @db.Text
  metadata    Json?    // Additional context data
  timestamp   DateTime @default(now())

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@index([executionId])
  @@index([level])
  @@map("execution_logs")
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  status               String    @default("inactive")
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("subscriptions")
}

// Integration layer models
model Credential {
  id             String   @id @default(cuid())
  workspaceId    String
  name           String
  description    String?
  type           String
  provider       String?
  encryptedData  String
  metadata       Json?
  lastRotatedAt  DateTime?
  rotationPolicy Json?
  expiresAt      DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  connectors Connector[]

  @@index([workspaceId])
  @@map("credentials")
}

model Connector {
  id           String   @id @default(cuid())
  workspaceId  String
  name         String
  type         String
  description  String?
  config       Json
  credentialId String?
  enabled      Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  credential Credential? @relation(fields: [credentialId], references: [id], onDelete: SetNull)

  @@index([workspaceId])
  @@index([type])
  @@index([credentialId])
  @@map("connectors")
}

model Webhook {
  id             String   @id @default(cuid())
  workspaceId    String
  name           String
  description    String?
  url            String
  secret         String?
  events         Json
  headers        Json?
  retryPolicy    Json?
  enabled        Boolean  @default(true)
  lastTriggeredAt DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  deliveries WebhookDelivery[]

  @@index([workspaceId])
  @@map("webhooks")
}

model WebhookDelivery {
  id           String   @id @default(cuid())
  webhookId    String
  eventType    String
  payload      Json
  request      Json?
  response     Json?
  status       String   @default("pending") // pending, delivered, failed
  attemptCount Int      @default(0)
  lastAttemptAt DateTime?
  nextRetryAt  DateTime?
  error        String?
  createdAt    DateTime @default(now())

  webhook Webhook @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  @@index([webhookId])
  @@index([status])
  @@index([createdAt])
  @@map("webhook_deliveries")
}

model AuditLog {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String?
  action      String
  entityType  String   // what type of entity was affected
  entityId    String?  // id of the affected entity
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  timestamp   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@index([timestamp])
  @@map("audit_logs")
}

model UsageRecord {
  id            String   @id @default(cuid())
  workspaceId   String
  date          DateTime
  executionCount Int     @default(0)
  runMinutes    Float    @default(0)
  connectorCount Int     @default(0)
  workflowCount  Int     @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, date])
  @@index([workspaceId])
  @@index([date])
  @@map("usage_records")
}

model AlertRule {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  type        String
  enabled     Boolean  @default(true)
  conditions  Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  notifications AlertNotification[]

  @@index([workspaceId])
  @@map("alert_rules")
}

model AlertChannel {
  id          String   @id @default(cuid())
  workspaceId String
  type        String
  name        String
  config      Json
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  notifications AlertNotification[]

  @@index([workspaceId])
  @@map("alert_channels")
}

model AlertNotification {
  id             String   @id @default(cuid())
  alertRuleId    String
  alertChannelId String
  status         String   @default("pending") // pending, sent, failed
  message        String
  sentAt         DateTime?
  error          String?
  createdAt      DateTime @default(now())

  alertRule    AlertRule    @relation(fields: [alertRuleId], references: [id], onDelete: Cascade)
  alertChannel AlertChannel @relation(fields: [alertChannelId], references: [id], onDelete: Cascade)

  @@index([alertRuleId])
  @@index([alertChannelId])
  @@index([status])
  @@map("alert_notifications")
}

model ExecutionMetrics {
  id                  String   @id @default(cuid())
  workspaceId         String?
  userId              String?
  date                DateTime
  hour                Int?
  totalExecutions     Int      @default(0)
  successfulExecutions Int     @default(0)
  failedExecutions    Int      @default(0)
  totalDurationMs     BigInt   @default(0)
  minDurationMs       Int?
  maxDurationMs       Int?
  avgDurationMs       Float?
  p50DurationMs       Int?
  p95DurationMs       Int?
  p99DurationMs       Int?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  workspace Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId, date, hour])
  @@index([workspaceId])
  @@index([userId])
  @@index([date])
  @@map("execution_metrics")
}

