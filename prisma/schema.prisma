// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js models
model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String    @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  workspacePreferences Json?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  workflows     Workflow[]
  subscriptions Subscription[]
  apiKeys       UserApiKey[]
  memberships   Membership[]

  @@map("users")
}

model Workspace {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  billingPlanId String?
  billingPlan   BillingPlan? @relation(fields: [billingPlanId], references: [id])

  members       Membership[]
  apiKeys       APIKey[]
  
  // Optional: Workflows can belong to a workspace
  // workflows     Workflow[]

  @@map("workspaces")
}

model Membership {
  id          String   @id @default(cuid())
  role        String   @default("member") // owner, admin, member
  userId      String
  workspaceId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@map("memberships")
}

model APIKey {
  id          String    @id @default(cuid())
  key         String    @unique
  name        String?
  workspaceId String
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  lastUsedAt  DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@map("api_keys")
}

model BillingPlan {
  id          String   @id @default(cuid())
  name        String   // Free, Pro, Enterprise
  price       Int      // Monthly price in cents
  currency    String   @default("USD")
  features    Json?    // Feature flags/limits
  stripePriceId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspaces Workspace[]

  @@map("billing_plans")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Application models
model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  isPublic    Boolean  @default(false)
  // Rate limiting and retry configuration
  rateLimitMaxConcurrent Int?     @default(5)
  rateLimitPerMinute     Int?     @default(100)
  retryMaxAttempts       Int      @default(3)
  retryBackoffMs         Int      @default(1000)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions          WorkflowVersion[]
  triggers          Trigger[]
  connectorInstances ConnectorInstance[]

  @@index([userId])
  @@map("workflows")
}

model WorkflowVersion {
  id          String   @id @default(cuid())
  workflowId  String
  version     Int
  definition  Json     // Full workflow definition including steps
  isActive    Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())

  workflow   Workflow    @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  executions Execution[]
  steps      Step[]

  @@unique([workflowId, version])
  @@index([workflowId])
  @@index([isActive])
  @@map("workflow_versions")
}

model Step {
  id                String   @id @default(cuid())
  workflowVersionId String
  name              String
  type              String   // http_request, transform, conditional, loop, delay, error_handler, fallback, custom_code
  config            Json     // Step-specific configuration
  position          Int      // Order in workflow
  createdAt         DateTime @default(now())

  workflowVersion WorkflowVersion  @relation(fields: [workflowVersionId], references: [id], onDelete: Cascade)
  executionSteps  ExecutionStep[]

  @@index([workflowVersionId])
  @@map("steps")
}

model Trigger {
  id         String   @id @default(cuid())
  workflowId String
  type       String   // manual, webhook, schedule, event, api
  config     Json     // Trigger-specific configuration (cron expression, webhook URL, etc.)
  enabled    Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  workflow   Workflow     @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  executions Execution[]

  @@index([workflowId])
  @@index([type])
  @@map("triggers")
}

model ConnectorInstance {
  id           String   @id @default(cuid())
  workflowId   String
  name         String   // e.g., "Production API", "Staging Database"
  connectorType String  // http, database, email, etc.
  config       Json     // Connection details, credentials (encrypted)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@map("connector_instances")
}

model Execution {
  id                String    @id @default(cuid())
  workflowVersionId String
  triggerId         String?   // Which trigger initiated this execution
  status            String    @default("pending") // pending, running, completed, failed, cancelled
  input             Json?
  output            Json?
  error             String?   @db.Text
  startedAt         DateTime  @default(now())
  completedAt       DateTime?
  durationMs        Int?      // Execution duration in milliseconds
  retryCount        Int       @default(0)

  workflowVersion WorkflowVersion  @relation(fields: [workflowVersionId], references: [id], onDelete: Cascade)
  trigger         Trigger?         @relation(fields: [triggerId], references: [id], onDelete: SetNull)
  logs            ExecutionLog[]
  steps           ExecutionStep[]

  @@index([workflowVersionId])
  @@index([triggerId])
  @@index([status])
  @@index([startedAt])
  @@map("executions")
}

model ExecutionStep {
  id          String    @id @default(cuid())
  executionId String
  stepId      String
  status      String    @default("pending") // pending, running, completed, failed, skipped
  input       Json?
  output      Json?
  error       String?   @db.Text
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  durationMs  Int?
  retryCount  Int       @default(0)

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  step      Step      @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@index([executionId])
  @@index([stepId])
  @@map("execution_steps")
}

model ExecutionLog {
  id          String   @id @default(cuid())
  executionId String
  level       String   // info, warn, error, debug
  message     String   @db.Text
  metadata    Json?    // Additional context data
  timestamp   DateTime @default(now())

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@index([executionId])
  @@index([level])
  @@map("execution_logs")
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  status               String    @default("inactive")
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("subscriptions")
}

// Workspace for multi-tenancy
model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  ownerId     String
  settings    Json?    // Workspace-level settings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     WorkspaceMember[]
  credentials Credential[]
  apiKeys     ApiKey[]
  connectors  Connector[]
  webhooks    Webhook[]

  @@index([ownerId])
  @@map("workspaces")
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  role        String   @default("member") // owner, admin, member, viewer
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
  @@map("workspace_members")
}

// Encrypted credential storage
model Credential {
  id                String    @id @default(cuid())
  workspaceId       String
  name              String
  description       String?
  type              String    // oauth, api_key, basic_auth, token, custom
  provider          String?   // slack, stripe, discord, smtp, etc.
  encryptedData     String    @db.Text // Encrypted JSON with credentials
  metadata          Json?     // Additional metadata (scopes, permissions, etc.)
  lastRotatedAt     DateTime?
  rotationPolicy    Json?     // Auto-rotation config
  expiresAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  createdBy         String

  workspace     Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  connectors    Connector[]
  auditLogs     AuditLog[]

  @@index([workspaceId])
  @@index([provider])
  @@index([type])
  @@map("credentials")
}

// API Keys for REST API access
model ApiKey {
  id          String    @id @default(cuid())
  workspaceId String
  name        String
  keyHash     String    @unique // Hashed API key
  keyPrefix   String    // First few chars for identification (e.g., "sk_live_abc...")
  permissions Json      // Scoped permissions
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  createdAt   DateTime  @default(now())
  createdBy   String

  workspace Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  usageLogs ApiKeyUsage[]

  @@index([workspaceId])
  @@index([keyHash])
  @@map("api_keys")
}

model ApiKeyUsage {
  id          String   @id @default(cuid())
  apiKeyId    String
  endpoint    String
  method      String
  statusCode  Int
  duration    Int      // milliseconds
  timestamp   DateTime @default(now())

  apiKey ApiKey @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([apiKeyId])
  @@index([timestamp])
  @@map("api_key_usage")
}

// Connector definitions
model Connector {
  id           String   @id @default(cuid())
  workspaceId  String
  name         String
  type         String   // slack, smtp, stripe, discord, http, custom
  description  String?
  config       Json     // Connector-specific configuration
  credentialId String?  // Optional link to credential
  enabled      Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  credential Credential? @relation(fields: [credentialId], references: [id], onDelete: SetNull)

  @@index([workspaceId])
  @@index([type])
  @@index([credentialId])
  @@map("connectors")
}

// Webhook infrastructure
model Webhook {
  id              String    @id @default(cuid())
  workspaceId     String
  name            String
  description     String?
  url             String    // Webhook endpoint URL
  secret          String?   // Secret for signature verification
  events          Json      // Array of event types to listen for
  headers         Json?     // Custom headers to include
  retryPolicy     Json?     // Retry configuration
  enabled         Boolean   @default(true)
  lastTriggeredAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  workspace Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  deliveries WebhookDelivery[]

  @@index([workspaceId])
  @@map("webhooks")
}

model WebhookDelivery {
  id            String    @id @default(cuid())
  webhookId     String
  eventType     String
  payload       Json
  request       Json?     // Request details (headers, body)
  response      Json?     // Response details (status, headers, body)
  status        String    @default("pending") // pending, success, failed
  attemptCount  Int       @default(0)
  lastAttemptAt DateTime?
  nextRetryAt   DateTime?
  error         String?   @db.Text
  createdAt     DateTime  @default(now())

  webhook Webhook @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  @@index([webhookId])
  @@index([status])
  @@index([createdAt])
  @@map("webhook_deliveries")
}

// Audit trail
model AuditLog {
  id           String   @id @default(cuid())
  workspaceId  String?  // Optional workspace scoping
  userId       String?  // Who performed the action
  action       String   // create, update, delete, access, rotate, etc.
  resourceType String   // credential, workflow, connector, etc.
  resourceId   String?
  credentialId String?  // For credential-specific audits
  details      Json?    // Additional context
  ipAddress    String?
  userAgent    String?
  timestamp    DateTime @default(now())

  credential Credential? @relation(fields: [credentialId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@index([resourceType])
  @@index([credentialId])
  @@index([timestamp])
  @@map("audit_logs")
}
